<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_color"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    >

    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_hight"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top_btn"
        android:orientation="horizontal"
        android:background="@drawable/edit_background"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧  密  码："
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_old_psd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/edittext_hight"
            android:textSize="@dimen/text_size"
            android:hint="若包含字母，请注意区分大小写"
            android:cursorVisible="false"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_hight"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="horizontal"
        android:background="@drawable/edit_background"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码："
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_new_psd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/edittext_hight"
            android:textSize="@dimen/text_size"
            android:hint="密码请设置为6-12位"
            android:cursorVisible="false"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_hight"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="horizontal"
        android:background="@drawable/edit_background"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_make_sure_new_psd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/edittext_hight"
            android:textSize="@dimen/text_size"
            android:hint="请重新输入密码"
            android:cursorVisible="false"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            />
    </LinearLayout>

<Button
    android:id="@+id/btn_restore_psd"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/edittext_hight"
    android:text="确认修改"
    android:textSize="@dimen/text_size"
    android:textColor="@color/background_edit"
    android:gravity="center"
    android:background="@drawable/btn_background"
    android:paddingLeft="@dimen/edittext_hight"
    android:paddingRight="@dimen/edittext_hight"
    android:layout_marginTop="@dimen/margin_top_btn"
    />

</LinearLayout>
