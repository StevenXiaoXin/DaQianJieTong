<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/background_color"
    >

    <include layout="@layout/title_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rl_height"
        android:background="@color/background_edit"
        >

        <ImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="@dimen/user_photo"
            android:layout_height="@dimen/user_photo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/small_margin"
            android:src="@mipmap/guide1"
            android:scaleType="centerCrop"
            />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_toRightOf="@+id/iv_user_photo"
    android:gravity="center_vertical"
    >
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:text="未命名"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_marginBottom="13dp"
        />

    <TextView
        android:id="@+id/tv_user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:text="13833333333"
        android:textColor="@color/text_color"
        android:textSize="16sp"/>

</LinearLayout>

    </RelativeLayout>
<LinearLayout
    android:id="@+id/ll_user_info"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/background_edit"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="个人信息"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/small_margin"

        />
    <ImageView
        android:layout_width="@dimen/margin_top_edit"
        android:layout_height="@dimen/margin_top_edit"
        android:src="@mipmap/iv_arrow_right"
        android:layout_marginRight="@dimen/small_margin"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_order"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/background_edit"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/small_margin"

            />
        <ImageView
            android:layout_width="@dimen/margin_top_edit"
            android:layout_height="@dimen/margin_top_edit"
            android:src="@mipmap/iv_arrow_right"
            android:layout_marginRight="@dimen/small_margin"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_restore_psd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/background_edit"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/small_margin"

            />
        <ImageView
            android:layout_width="@dimen/margin_top_edit"
            android:layout_height="@dimen/margin_top_edit"
            android:src="@mipmap/iv_arrow_right"
            android:layout_marginRight="@dimen/small_margin"
            />
    </LinearLayout>

</LinearLayout>
